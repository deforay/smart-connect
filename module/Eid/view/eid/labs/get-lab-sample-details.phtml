            labelFormatter: function () {
                return '<div ><span style="float:left;font-size:10px;">' + this.myData + ' -  </span><span style="font-size:10px; ">'+ this.percentage.toFixed(1)+'% ('+Highcharts.numberFormat(this.y, 0)+')</span></div>';
