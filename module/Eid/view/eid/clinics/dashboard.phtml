                });
                aoData.push({
                    "name": "gender",
                    "value": $("#gender").val()
                });
                aoData.push({
                    "name": "sampleStatus",
                    "value": $("#sampleStatus").val()
                });
                $.ajax({
                    "dataType": 'json',
